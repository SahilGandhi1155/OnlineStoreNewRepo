                                       asp-route-sortBy="@ViewData["SortBy"]" asp-route-pageIndex="@i"
                                       asp-route-PageSize="@ViewData["pageSize"]">
                                        @i
                                    </a>
                                </li>
                            }
                        }
                        @if (endIndex < TotalProducts)
                        {
                            int nextPageNumber = currentPageNumber + 1;
                            <li class="page-item">
                                <a class="page-link" asp-controller="Home" asp-action="FilterByPrice"
                                   asp-route-catId="@ViewData["catId"]" asp-route-subcatId="@ViewData["subcatId"]"
                                   asp-route-brandId="@ViewData["brandId"]" asp-route-searchValue="@ViewData["searchValue"] "
