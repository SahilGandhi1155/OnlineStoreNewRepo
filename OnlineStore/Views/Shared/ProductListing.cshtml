@{
    ViewBag.Title = "Find your Picks";
    Layout = "~/Views/Shared/_LayoutExceptIndex.cshtml";
}

@{
    int pageSize = (int)ViewData["pageSize"];
    int startIndex = (int?)ViewData["pageNumber"] ?? 1;
    int currentPageNumber = ((int?)ViewData["pageNumber"] ?? 1);
    startIndex = startIndex == 1 ? 1 : pageSize * (startIndex - 1) + 1;
    int endIndex = startIndex + (int)ViewData["pageSize"] - 1;
    int TotalProducts = (int)ViewData["Count"];
    endIndex = endIndex > TotalProducts ? TotalProducts : endIndex;
}
