@model Category
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="form-horizontal">
        <form asp-controller="Admin" asp-action="AddCategory" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="CategoryName" class="form-control" placeholder="Name">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10 checkbox">
                    @Html.CheckBox("IsActive")
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="IsDelete" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10 checkbox">
                    @Html.CheckBox("IsDelete")
                    <span asp-validation-for="IsDelete" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="width:100px;">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>