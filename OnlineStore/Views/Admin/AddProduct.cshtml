
@model OnlineStore.Model.Product

@{
    ViewBag.Title = "Add Product";
}

<form asp-controller="Admin" asp-action="AddProduct" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="OriginalPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="OriginalPrice" class="form-control" placeholder="OriginalPrice">

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DiscountPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DiscountPrice" class="form-control" placeholder="DiscountPrice">

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DiscountPercentage" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DiscountPercentage" class="form-control" placeholder="DiscountPercentage">

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Image" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Image" class="form-control" placeholder="Image">

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">

        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CategoryId" class="col-sm-2 col-form-label"> Category Name</label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" class="custom-select mr-sm-2"
                    asp-items="@{new SelectList(ViewBag.ListofCategories,"CategoryId","CategoryName")}">
                <option value="">Please select</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>