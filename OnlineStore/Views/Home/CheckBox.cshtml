@model PriceViewModel

@using (Html.BeginForm())
{
<div class="container col-12">
    <div class="row">
        @for (int i = 0; i < Model.prices.Count(); i++)
        {
            @Html.CheckBoxFor(model => model.prices[i].isSelected)
            <label>@Model.prices[i].Value</label>
            @Html.HiddenFor(model => model.prices[i].id)
            @Html.HiddenFor(model => model.prices[i].Value)
        }
       
    </div>
    <input type="submit" value="submit" />
</div>
  }